<Application x:Class="Horoscope.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Horoscope"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="CommonTextBlockStyle">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="SettingsButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
        </Style>
        <Style x:Key="CommonButton" TargetType="Button">
            <Setter Property="Margin" Value="5,10,5,10"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ListView" x:Key="ListViewStyle">
            <Setter Property="Margin" Value="5,0,5,0"/>
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="5,0,5,10"/>
        </Style>
    </Application.Resources>
</Application>
